<?xml version="1.0" encoding="UTF-8" ?>
<!-- sample transcoder template for java-ffmpeg wrapper -->
<Template version="1">
	<Transcode>
		<Name>juno</Name>
		<Description>Sample transcode template</Description>	
		<Encodes>
			<Encode>
				<Enable>true</Enable>
				<!-- must be unique in this sequence of encodes -->
				<Name>Stream 2 Stream</Name>
				<StreamName>${SourceApplication}/mp4:${SourceStreamName}_source</StreamName>				
				<Video>
					<!-- Any supported codec, Copy, Disable, {codecname} -->
					<Codec>Disable</Codec>
					<!-- very, strict, normal, unofficial, experimental (dont set if you dont know) -->
					<Implementation></Implementation>
					<FrameSize>
						<Width>320</Width>
						<Height>240</Height>
					</FrameSize>
					<FrameRate>24</FrameRate>
					<Bitrate>
						<Average>0</Average><!-- average auto excludes min max buffer and uses ABR enoding-->
						<Min>500</Min><!-- K -->
						<Max>600</Max><!-- K -->
						<Buffer>500</Buffer> <!-- K (device buffer)-->
					</Bitrate> 
					<KeyFrameInterval>
						<Gop>24</Gop>
						<IntervalMin>48</IntervalMin>
					</KeyFrameInterval>
					<Overlays>
						<Overlay>
							<Enable>false</Enable>
							<Name>Brand Logo</Name>
							<Index>0</Index>
							<ImagePath>C:\\Users\\Rajdeep\\Documents\\GitHub\\rajdeep\\ffmpeg-transcoder\\transcoder\\images\\logo.png</ImagePath>
							<!-- 0 - 100 -->
							<Opacity>100</Opacity>
							<Location>
								<X>4</X>
								<Y>4</Y>
								<Width>${ImageWidth}</Width>
								<Height>${ImageHeight}</Height>
								<!-- TOPLEFT, TOPRIGHT, BOTTOMLEFT, BOTTOMRIGHT, CENTERLEFT, CENTERRIGHT, CENTERTOP,  CENTERBOTTOM, CENTERMIDDLE -->
								<Align>TOPRIGHT</Align>
							</Location>
						</Overlay>
					</Overlays>
					<!-- Extra params such as filters -->
					<Parameters>
						<Param>
							<Key></Key>
							<Value></Value>
						</Param>
					</Parameters>
				</Video>
				
				<Audio>
					<!-- Any supported codec, Copy, Disable, {codecname} -->
					<Codec>Copy</Codec>
					<!-- very, strict, normal, unofficial, experimental (dont set if you dont know) -->
					<Implementation></Implementation>
					<Bitrate>128</Bitrate> <!-- Kbps -->
					<!-- samplerate -->
					<SampleRate>22050</SampleRate>
					<!-- mono, stereo -->
					<Channels>mono</Channels>
					<!-- Extra params such as filters -->
					<Parameters> 
						<Param>
							<Key></Key>
							<Value></Value>
						</Param>
					</Parameters>
				</Audio>
				
				<!-- Extra params to appear towards the end of command such as format container definition or hls flags -->
				<Output>
					<Container>auto</Container>
					<Flags>
						<!--<RawFlag></RawFlag>-->
					</Flags>
				</Output>				
				
			</Encode>
		</Encodes>
	</Transcode>
</Template>
